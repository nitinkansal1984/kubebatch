apiVersion: v1
kind: Pod
metadata:
  name: security-context-demo
spec:
  securityContext:
    runAsUser: 1000
    fsGroup: 2000  
  containers:
  - name: sec-ctx-demo
    image: nitinkansal/goldenimage:latest
    command: [ "sh", "-c", "sleep 1h" ]
    volumeMounts:
    - name: sec-ctx-vol
      mountPath: /data/demo
    securityContext:
      allowPrivilegeEscalation: false
      readOnlyRootFilesystem: true 
  volumes:
  - name: sec-ctx-vol
    emptyDir: {}

